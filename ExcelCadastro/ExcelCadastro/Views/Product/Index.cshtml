@model IEnumerable<ExcelCadastro.Models.Product>

@{
    ViewData["Title"] = "Lista de Produtos";
}

<h2>Lista de Produtos</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<p>
    <a asp-action="Create" class="btn btn-primary">Cadastrar Novo Produto</a>
</p>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Fornecedor</th>
                <th>Categoria</th>
                <th>Descrição</th>
                <th>Apresentação</th>
                <th>Especificações</th>
                <th>Área Terapêutica</th>
                <th>Status Regulatório</th>
                <th>Dosagem</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Fornecedor</td>
                    <td>@item.Category</td>
                    <td>@item.Description</td>
                    <td>@item.Presentation</td>
                    <td>@item.Specifications</td>
                    <td>@item.TherapeuticArea</td>
                    <td>@item.RegulatoryStatus</td>
                    <td>@item.Dosage</td>
                </tr>
            }
        </tbody>
    </table>
</div>