@model ExcelCadastro.Models.Product

@{
    ViewData["Title"] = "Cadastrar Produto";
}

<h2>Cadastrar Novo Produto</h2>

<hr />

<div class="row">
    <div class="col-md-8">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Fornecedor" class="form-label"></label>
                <input asp-for="Fornecedor" class="form-control" />
                <span asp-validation-for="Fornecedor" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Category" class="form-label"></label>
                <input asp-for="Category" class="form-control" />
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Presentation" class="form-label"></label>
                <input asp-for="Presentation" class="form-control" />
                <span asp-validation-for="Presentation" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Specifications" class="form-label"></label>
                <textarea asp-for="Specifications" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Specifications" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="TherapeuticArea" class="form-label"></label>
                <input asp-for="TherapeuticArea" class="form-control" />
                <span asp-validation-for="TherapeuticArea" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="RegulatoryStatus" class="form-label"></label>
                <textarea asp-for="RegulatoryStatus" class="form-control" rows="2"></textarea>
                <span asp-validation-for="RegulatoryStatus" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Dosage" class="form-label"></label>
                <input asp-for="Dosage" class="form-control" />
                <span asp-validation-for="Dosage" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-success">Salvar</button>
                <a asp-action="Index" class="btn btn-secondary">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
