<UserControl x:Class="Day005_Conversor.Janelas.ctu_Distancia"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Day005_Conversor.Janelas"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Distância" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontWeight="Bold" Height="26" Width="62" />
        <ComboBox x:Name="cbx_PrimeiraUni" Grid.Column="1" HorizontalAlignment="Left" Margin="11,88,0,0" VerticalAlignment="Top" Width="180" Height="50" FontSize="20" VerticalContentAlignment="Center" SelectionChanged="cbx_PrimeiraUni_SelectionChanged"/>
        <ComboBox x:Name="cbx_SegundaUni" Grid.Column="1" HorizontalAlignment="Left" Margin="11,88,0,0" VerticalAlignment="Top" Width="180" Height="50" Grid.Row="1" FontSize="20" VerticalContentAlignment="Center" SelectionChanged="cbx_SegundaUni_SelectionChanged"/>
        <TextBlock x:Name="tbk_Resultado" HorizontalAlignment="Left"  Margin="214,89,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="180" Height="50" FontSize="22" />
        <TextBox x:Name="tbx_ValorOriginal" HorizontalAlignment="Left" Margin="214,89,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="180" Height="50" FontSize="20" VerticalContentAlignment="Center" TextChanged="tbx_ValorOriginal_TextChanged"/>

    </Grid>
</UserControl>
