<Window x:Class="Day005_Conversor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Day005_Conversor"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DockPanel>
            <!--Barra Lateral -->
            <StackPanel DockPanel.Dock="Left" Background="Gray">
                <Button x:Name="btn_distancia" Content="Distância" Margin="5,5,5,5" Width="90" Click="btn_distancia_Click"/>
                <Button x:Name="btn_temper" Content="Temperatura" Margin="5,5,5,5" Width="90" Click="btn_temper_Click"/>
                <Button x:Name="btn_peso" Content="Peso" Margin="5,5,5,5" Width="90" Click="btn_peso_Click"/>
                <Button x:Name="btn_tempo" Content="Tempo" Margin="5,5,5,5" Width="90" Click="btn_tempo_Click"/>
            </StackPanel>

            <!-- Área dinâmica -->
            <ContentControl x:Name="MainContent">
                
            </ContentControl>
        </DockPanel>

    </Grid>
</Window>
