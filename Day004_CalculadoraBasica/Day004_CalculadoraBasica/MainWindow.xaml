<Window x:Class="Day004_CalculadoraBasica.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Day004_CalculadoraBasica"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>

        </Grid.RowDefinitions>
        <Grid Grid.ColumnSpan="4" HorizontalAlignment="Left" Height="152" Margin="34,40,0,0" Grid.RowSpan="3" VerticalAlignment="Top" Width="316">
            <Label Content="Digite A" HorizontalAlignment="Left" VerticalAlignment="Top" FontWeight="Bold"/>
            <Label Content="Digite B" HorizontalAlignment="Left" Margin="1,46,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
            <TextBox x:Name="tbx_numA" HorizontalAlignment="Left" Margin="76,4,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="tbx_numA_TextChanged"/>
            <TextBox x:Name="tbx_numB" HorizontalAlignment="Left" Margin="76,50,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="tbx_numB_TextChanged"/>
            <Button x:Name="btn_mais" Content="+" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Left" Margin="223,2,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.371,-0.209" Width="30" Height="30" FontWeight="Bold" FontSize="14" Click="btn_mais_Click"/>
            <Button x:Name="btn_divisao" Content="/" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Left" Margin="223,48,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.371,-0.209" Width="30" Height="30" FontWeight="Bold" FontSize="14" Click="btn_divisao_Click"/>
            <Button x:Name="btn_menos" Content="-" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Left" Margin="265,2,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.371,-0.209" Width="30" Height="30" FontWeight="Bold" FontSize="14" Click="btn_menos_Click"/>
            <Button x:Name="btn_mult" Content="*" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Left" Margin="265,48,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.371,-0.209" Width="30" Height="30" FontWeight="Bold" FontSize="14" Click="btn_mult_Click"/>
            <Label Content="Resultado" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Margin="76,80,0,0" VerticalAlignment="Top" Width="180" FontWeight="Bold"/>
            <Label x:Name="lbl_resultado" Content="" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Margin="76,126,0,0" VerticalAlignment="Top" Width="180" FontWeight="Bold"/>

        </Grid>

    </Grid>
</Window>
