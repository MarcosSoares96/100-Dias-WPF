<Window x:Class="HelloWorldApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HelloWorldApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="398*"/>
            <ColumnDefinition Width="403*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button x:Name="btn_helloWorld" Content="Revelar" HorizontalAlignment="Center" Margin="0,23,0,0" Grid.Row="1" VerticalAlignment="Top" Height="51" Width="176" Click="btn_helloWorld_Click"/>
        <Button x:Name="btn_limpar" Content="Limpar" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Center" Height="51" Width="176" Click="btn_limpar_Click"/>
        <Label x:Name="lbl_text" Grid.Column="1" HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Center" Height="109" Grid.RowSpan="2" Width="287" FontSize="36" FontWeight="Bold"/>
        <Label Content="Clique em &quot;Revelar&quot; para mostrar a mensagem." HorizontalAlignment="Left" Margin="195,0,0,0" VerticalAlignment="Center" Grid.ColumnSpan="2" FontWeight="Bold" FontSize="18"/>

    </Grid>
</Window>
